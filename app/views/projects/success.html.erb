<div class="share-project">

  <div class="share-container">
    <div>
      <% if current_user.avatar.attached? %>
        <%= image_tag current_user.avatar, style: "width: 120px; border-radius: 50%; margin-top: -15%", class: "avatar-show"%>
      <% else %>
        <%= image_tag "avatar.png", style: "width: 120px; border-radius: 50%; margin-top: -15%", class: "avatar-show"%>
      <% end %>
    </div>

    <div>
      <h1>SHARE YOUR PROJECT!</h1>
      <p>Amazing! You just created a project. Now go and share it and start making decisions!</p>
    </div>

    <div class="share-text-area">
      <textarea class="js-copytextarea" readonly>https://www.deal-app.me<%= project_path(@project) %></textarea>
      <button class="copy-link-btn"><i class="fas fa-share-alt"></i></button>
    </div>

    <div style="padding: 50px; text-align: center">
      <%= link_to "Go to project", project_path(@project), class:"btn-main" %>
    </div>
  </div>
</div>

<%# JAVASCRIPT %>
<script>
  var copyTextareaBtn = document.querySelector('.copy-link-btn');

  copyTextareaBtn.addEventListener('click', function(event) {
    var copyTextarea = document.querySelector('.js-copytextarea');
    copyTextarea.focus();
    copyTextarea.select();

    try {
      var successful = document.execCommand('copy');
      var msg = successful ? 'successful' : 'unsuccessful';
      console.log('Copying text command was ' + msg);
    } catch (err) {
      console.log('Oops, unable to copy');
    }
  });
</script>
