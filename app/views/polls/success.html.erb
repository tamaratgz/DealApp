<% if current_user.avatar.attached? %>
  <%= image_tag current_user.avatar, style: "width: 80px; border-radius: 50%", class: "avatar-profile" %>
<% else %>
  <%= image_tag "avatar.png", style: "width: 80px; border-radius: 50%", class: "avatar-profile" %>
<% end %>

<h1>SHARE YOUR POLL!</h1>
<p>Amazing! You just created a poll. Now go and share it and start making decisions!</p>

<p>
  <textarea class="js-copytextarea" readonly>https://www.deal-app.me<%= poll_path(@poll) %></textarea>
  <button class="copy-link-btn">Copy link</button>
</p>

<%= link_to "Go to dashboard", root_path %>

<%# JAVASCRIPT %>
<script>
var copyTextareaBtn = document.querySelector('.copy-link-btn');

copyTextareaBtn.addEventListener('click', function(event) {
  var copyTextarea = document.querySelector('.js-copytextarea');
  copyTextarea.focus();
  copyTextarea.select();

  try {
    var successful = document.execCommand('copy');
    var msg = successful ? 'successful' : 'unsuccessful';
    console.log('Copying text command was ' + msg);
  } catch (err) {
    console.log('Oops, unable to copy');
  }
});
</script>
