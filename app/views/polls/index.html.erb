<h1>All polls without project</h1>
<h3>Until now only all polls // Feature will follow real soon!</h3>

<ul>
  <% @polls.each do |poll| %>
    <li>
      <div>
        <h3><%= poll.title %></h3>
        <p><strong>Description:</strong> <%= poll.description %></p>
        <p><strong>Deadline:</strong> <%= poll.deadline %></p>
        <ul>
          <% poll.answers.each do |answer| %>
            <li><%= answer.title %> - <%= answer.votes.count %> votes</li>
          <% end %>
        </ul>
      </div>
    </li>
  <% end %>
</ul>

<%= link_to "Create poll", new_poll_path %>
