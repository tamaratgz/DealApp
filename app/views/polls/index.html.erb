<div style="margin: 30px 30px 0px 30px;">
  <%= link_to root_path, class: "back" do %>
  <i class="fas fa-undo iconsnavbar"></i>
  <% end %>
</div>

<div class="title-with-avatar">
  <h1 class="titlepoll" style="margin-top: 5%">ALL POLLS</h1>
  <%# user-avatar goes here %>
    <% if current_user.avatar.attached? %>
      <%= image_tag current_user.avatar, style: "width: 70px; border-radius: 50%; margin-right: 20px; height: 57px; object-fit: cover", class: "avatar-profilepoll" %>
    <% else %>
      <%= image_tag "avatar.png", style: "width: 70px; border-radius: 50%; margin-right: 20px; height: 57px; object-fit: cover", class: "avatar-profilepoll" %>
    <% end %>
    </div>


<p style="font-size: 20px; margin-left: 5%; margin-bottom: 5%;"> <strong> ✅ Active polls </strong></p>
<ul>
  <% @open_polls.each do |poll| %>
    <div class="container-poll">
      <li>
        <%= render "polls/poll", poll: poll %>
      </li>
    </div>
  <% end %>
</ul>

<p style="font-size: 20px; margin-left: 5%; margin-bottom: 5%;"> <strong> ❌ Inactive polls </strong></p>
<ul>
  <% @closed_polls.each do |poll| %>
    <div class="container-poll">
      <li>
        <%= render "polls/poll", poll: poll %>
      </li>
    </div>
  <% end %>
</ul>

<div class="container-button">
  <span class="btn-main">
    <%= link_to "Create poll", new_poll_path %>
  </span>
</div>
