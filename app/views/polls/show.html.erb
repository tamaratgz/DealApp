<h1 style="text-align: center; padding: 50px 0px 25px 0px">DEAL.</h1>

<%= image_tag @poll.user.avatar, class: "avatar-show" %>

<% unless user_signed_in? || !session[:name].nil? %>
  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Launch demo modal
  </button>

  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Enter your name</h5>
        </div>
        <%= simple_form_for :guest, url: guests_path, remote: true do |f| %>
        <div class="modal-body">
            <%= f.input :name %>
        </div>
        <div class="modal-footer">
          <%= f.submit class: "btn btn-primary", data: { bs_dismiss: "modal"} %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>



<ul>
  <div class="container-poll">
    <li>
      <%= render "polls/poll", poll: @poll %>
    </li>
  </div>
</ul>
