
<% if notice %>
<div class="flash flash-warning alert alert-dismissible fade show" role="alert">
  <span><%= notice %></span>
  <a data-bs-dismiss="alert" aria-label="Close" class="dismiss">
    <i class="fas fa-times"></i>
  </a>
</div>
<% end %>
<% if alert %>
<div class="flash flash-warning alert alert-dismissible fade show" role="alert">
  <span><%= alert %></span>
  <a data-bs-dismiss="alert" aria-label="Close">
    <i class="fas fa-times"></i>
  </a>
</div>
<% end %>
