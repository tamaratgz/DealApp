</div>

</button>

<!-- Modal -->
<div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="searchModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-fullscreen">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="searchModalLabel"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <!-- Search form -->
        <h1 class="titlepoll titlesearch"> SEARCH</h1>
        <%= form_tag polls_path, method: :get do %>
          <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a poll"
          %>
          <%= submit_tag "Search", class: "search-button" %>
          <img src="https://images.unsplash.com/photo-1518020382113-a7e8fc38eac9?ixlib=rb-1.2.1&ixid=MnwxM[â€¦]G90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=717&q=80" class="searchimage">
        <% end %>
        <!-- End of search form -->
      </div>
    </div>
  </div>
</div>
