
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-bottom">
  <div class="container-fluid">
      <ul class="navbar-nav me-auto navpoll">
        <% if user_signed_in? %>
          <li class="nav-item liclasshome">
            <%= link_to root_path, class: "nav-link" do %>
            <i class="fas fa-home iconsnavbarhome"></i>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to polls_path, class: "nav-link" do %>
            <i class="fas fa-question iconsnavbar"></i>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_poll_path, class: "nav-link" do %>
            <i class="fas fa-plus-circle iconsnavbarplus"></i>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to "#", class: "nav-link", data: {bs_toggle:"modal", bs_target:"#searchModal"} do %>
              <i class="fas fa-search iconsnavbar"></i>
            <% end %>
          </li>
          <li class="nav-item dropdown">
            <% if current_user.avatar.attached? %>
              <%= link_to edit_user_registration_path do %>
                <%= image_tag current_user.avatar, class: "avatar dropdown-toggle" %>
              <% end %>
            <% end %>
          </li>
        <% end %>
      </ul>
  </div>
</div>

</button>

<!-- Modal -->
<div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="searchModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-fullscreen">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="searchModalLabel"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <!-- Search form -->
        <h1 class="titlepoll"> SEARCH</h1>
        <%= form_tag polls_path, method: :get do %>
          <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a poll"
          %>
          <%= submit_tag "Search" %>
        <% end %>
        <!-- End of search form -->
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
